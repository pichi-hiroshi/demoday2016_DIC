<%= form_for(@post, url: choose_new_or_edit) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= @post.errors.count %>件のエラーがあります。</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.label :post_title %>
  <%= f.text_field :post_title %>
  <br>
  <%= f.label :post_message %>
  <%= f.text_field :post_message %>
  <br>
  <%= f.submit %>
<% end %>