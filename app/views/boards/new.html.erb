<div id="main-section">
  <div id="main-contents-sub">
    <div class="container">
      <div class="col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3">
        <%= form_for(@board) do |f| %>
          <%= f.label :board_url %>
          <%= f.text_field :board_url, class: "form-control" %>
          <br>
          <%= f.label :category %>
          <%= f.select :category, options_for_select(["technology","business","economic","market","education","sports"]), {}, {:class => "form-control"} %>
          <br>
          <%= f.submit "登録", class: "btn btn-primary btn-block" %>
        <% end %>
        
        <%= link_to "一覧にもどる", root_path %>
      </div>
    </div>  
  </div>
</div>