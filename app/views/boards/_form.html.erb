<%= form_for(@board, url: choose_new_or_edit) do |f| %>
  <%= f.label :board_url %>
  <%= f.text_field :board_url %>
  <br>
  <%= f.label :board_posttext %>
  <%= f.text_field :board_posttext %>
  <br>
  <%= f.submit %>
<% end %>

<%= form_for(@board, url: new_board_path, method: 'get') do |f| %>
